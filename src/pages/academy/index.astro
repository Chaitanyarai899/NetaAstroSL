---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Default.astro';
import BlogList from '@components/academy/AcadList.astro';
import RecentAcadPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import Pill from '@components/Pill.astro';
import Button from '@components/Button.astro';
import Card from '@components/Card.astro';
import {Content as CoiningReason} from './coiningreason.md';

const posts = await getCollection('blog').then((collection) =>
  collection.reverse()
);

const builtWith = [
  { name: 'DAODAO', url: 'https://daodao.zone/' },
  { name: 'Juno', url: 'https://junonetwork.io/' },
  { name: 'Akash', url: 'https://akash.network/' },
  { name: 'Astro', url: 'https://astro.build/' },
  { name: 'UnoCSS', url: 'https://uno.antfu.me/' },
  { name: 'Brutal', url: 'https://brutal.elian.codes/' },
  { name: 'Starlight', url: 'https://starlight.astro.build/' },
  { name: 'RSS', url: 'https://docs.astro.build/en/guides/rss/' },
  {
    name: 'Sitemap',
    url: 'https://docs.astro.build/en/guides/integrations-guide/sitemap/',
  },
  { name: 'Vercel', url: 'https://vercel.com' },
];

const stakeWith = [
  { name: 'Stake JUNO', url: 'https://wallet.keplr.app/chains/juno?modal=validator&chain=juno-1&validator_address=junovaloper1f2jpv5sc6ur6yurq5w0t2chphrznpy8lfvj9vs' },
  { name: 'Stake AKT', url: 'https://wallet.keplr.app/chains/akash?modal=validator&chain=akashnet-2&validator_address=akashvaloper1f2jpv5sc6ur6yurq5w0t2chphrznpy8l86yse9' },
  { name: 'Stake JKL', url: 'https://ping.pub/jackal/staking/jklvaloper1s4rscs2jj7qydkkrsrc52rgvq38wwgrqdrcrdq' },
];
---

<Layout
  title='NetaDAO | Academy 🏛'
  description='NetaDAO Academy | A place to learn'
  pageTitle='NetaDAO Academy'
>
  <main class='bg-#9F9A9E dark:bg-gradient-to-b from-cyan-950 to-stone-900 dark:rounded-10 border-b-4 border-1 border-black p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 flex-auto gap-4 mt-4'>
      <h2 class='hidden'>About NetaDAO</h2>
      <div class='col-span-4 flex-col flex-wrap justify-between'>
        <Card color='#E7E5E8' colord='#78716c'>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              <a
                class='text-#ED2E35 dark:text-white righteous'
                target='_blank'
                href='https://daodao.zone/dao/juno1c5v6jkmre5xa9vf9aas6yxewc7aqmjy0rlkkyk4d88pnwuhclyhsrhhns6/proposals'>NetaDAØ Academy</a
              >
            </p>
            <p class='outfit m-2 text-2xl md:text-3xl lg:text-4xl'>
              NetaDAO Academy is a subDAO focused on research and educational outreach.
            </p>
            <ul class='flex gap-4 flex-wrap justify-left'>
            </ul>
          </div>
        </Card>
      </div>
      <div class='col-span-2 flex-col flex-wrap justify-between'>
        <Card color='#E7E5E8' colord='#DE536F'>
          <h2 class='text-2xl md:text-4xl outfit lg:text-6xl mb-4'>
            Stake With US
          </h2>
          <p class='outfit text-xl md:text-2xl lg:text-2xl mb-4'>
            If you would like to support Neta DAO’s work, please consider delegating with the Neta DAO:
          </p>
           <ul class='flex gap-4 flex-wrap justify-center'>
            {
              stakeWith.map((item) => (
                <li>
                  <Pill color='#FF5757' colord='#53DEC3'>
                    <a
                      class='righteous'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2 flex-col flex-wrap justify-between'>
        <Card color='#E7E5E8' colord='#eab308'>
          <h2 class='text-2xl md:text-4xl outfit lg:text-5xl mb-8'>
            Find Coining Reason at
          </h2>
          <ul class='flex gap-4 flex-wrap justify-center'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill color='#FF5757' colord='#DE536F'>
                    <a
                      class='righteous'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>     
    </section>
    <div class='col-span-2 flex-col flex-wrap justify-between mt-4'>
      <Card color='#E7E5E8' colord='#44403c'>
        <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
          <a
            class='text-#ED2E35 dark:text-yellow righteous'
            target='_blank'
            href='https://daodao.zone/dao/juno1c5v6jkmre5xa9vf9aas6yxewc7aqmjy0rlkkyk4d88pnwuhclyhsrhhns6/proposals'>Coining Reason</a
          > 
        </p>
        <h2 class='text-2xl md:text-4xl outfit lg:text-5xl mb-8'>
          A NetaDAO Academy Series
        </h2>
          <CoiningReason />
      </Card>
    </div>   
  </main>
</Layout>
