-*+---
import { getCollection } from 'astro:content';
import AcadList from '../academy/AcadList.astro';
import Card from '@components/Card.astro';
import Button from '@components/Button.astro';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const posts = await getCollection('academy').then((posts) =>
  posts.reverse().slice(0, count ?? 4)
);
---

<section class='mt-8'>
  <Card color='#C4C2C5' colord='#eab308'>
    <div class='flex justify-between items-start'>
      <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 outfit'>
        Recent Academy posts
      </h2>
      <div class='hidden md:block'>
        <Button color='#f87171' colord='#7d53de' href='/academy/'>
          <p class='righteous'>
          Go to academy &rarr;
          </p>
        </Button>
      </div>
      <div class='block md:hidden'>
        <Button color='#f87171' colord='#7d53de' href='/academy/'>to academy</Button>
      </div>
    </div>
    <AcadList posts={posts} />
  </Card>
</section>
